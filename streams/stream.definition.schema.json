{
	"$id": "https://streamofjava.github.io/stream-definition.schema.json",
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"description": "Information about the stream schedule of a Twitch or YouTube channel",
	"type": "object",
	"properties": {
		"color": {
			"type": "string",
			"regex": "^#[0-9,a-f,A-F]{3}$|^#[0-9,a-f,A-F]{6}$"
		},
		"twitch_handle": {
			"type": "string"
		},
		"youtube_handle": {
			"type": "string"
		},
		"schedule": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"title": {
						"type": "string"
					},
					"description": {
						"type": "string"
					},
					"start_time": {
						"type": "string",
						"format": "date-time"
					},
					"duration_in_minutes": {
						"type": "number"
					},
					"stream_links": {
						"type": "array",
						"items": {
							"platform": {
								"type": "string",
								"enum": [
									"twitch",
									"youtube"
								]
							},
							"url": {
								"type": "string"
							},
							"required": [
								"platform"
							]
						}
					}
				},
				"required": [
					"title",
					"stream_links",
					"start_time"
				]
			}
		}
	},
	"anyOf": [
		{
			"required": [
				"color",
				"twitch_handle",
				"schedule"
			]
		},
		{
			"required": [
				"color",
				"youtube_handle",
				"schedule"
			]
		}
	]
}
